<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:rv="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center">

        <com.flyco.roundview.RoundLinearLayout
            android:id="@+id/tv_selected"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:rv_backgroundColor="#ff6fc0"
            app:rv_isRadiusHalfHeight="true"
            app:rv_isWidthHeightEqual="true"
            app:rv_strokeColor="#FFE5E5E5"
            app:rv_strokeWidth="4dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_pink"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#ff6fc0"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_purple"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#cd7eff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_blue"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#7181ff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_sky"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                app:rv_backgroundColor="#7bdbff"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true"></com.flyco.roundview.RoundLinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_green"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#7affc4"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_orange"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#ffc851"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_red"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#FC4343"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.flyco.roundview.RoundLinearLayout
                android:id="@+id/tv_yellow"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:rv_backgroundColor="#ECF83B"
                app:rv_isRadiusHalfHeight="true"
                app:rv_isWidthHeightEqual="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right">

            <com.umarbhutta.xlightcompanion.views.CircleImageView
                android:id="@+id/tv_more"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ys_more" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal|bottom"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close" />

        <TextView
            android:id="@+id/txtSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/close"
            android:textColor="#ff808080"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>